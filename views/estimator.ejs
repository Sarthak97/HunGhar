<% include partials/header %>

<div class="row" style="width:100%; height:100%;">
    <h1 style="text-align: center; margin-top:50px;">Request For Food</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form>
            <div class="form-group">
                <input class="form-control" type="text" name="people" placeholder="Expected Number of People" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" onClick = "calculator()">Submit Request</button>
            </div>
        </form>
    </div>  
    <p id="ans" style="margin-left:50px;">Hello!</p>
</div>


<script>
    function calculator()
    {
        document.getElementById("ans").innerHTML = "The suggested quantity of food for your query is: 50kgs!";
    }
</script>
